<%- include('partials/header') %>

    <main>
        <section class="hero" style="padding-bottom: 20px;">
            <h1>Hasil Pencarian Netshort</h1>
            <p>Hasil untuk kata kunci: "<strong>
                    <%= query %>
                </strong>"</p>
        </section>

        <section>
            <% if (results && results.length> 0) { %>
                <div class="drama-grid">
                    <% results.forEach(drama=> { %>
                        <a href="/play/<%= drama.shortPlayId %>" class="drama-card">
                            <img src="<%= drama.shortPlayCover %>" alt="<%= drama.shortPlayName %>" class="card-img"
                                loading="lazy">
                            <div class="card-info">
                                <h3 class="card-title text-shadow"><%- drama.shortPlayName %></h3>
                                <div class="card-meta">
                                    <span class="heat-score">
                                        <i class="fas fa-fire"></i>
                                        <%= drama.formatHeatScore || drama.heatScore %>
                                    </span>
                                </div>
                                <div class="label-list">
                                    <% if (drama.labelNameList && drama.labelNameList.length> 0) { %>
                                        <% drama.labelNameList.slice(0, 2).forEach(label=> { %>
                                            <span class="label-tag"><%- label %></span>
                                            <% }); %>
                                                <% } %>
                                </div>
                            </div>
                        </a>
                        <% }); %>
                </div>
                <% } else { %>
                    <div style="text-align: center; padding: 100px 0;">
                        <i class="fas fa-search"
                            style="font-size: 4rem; color: var(--glass-border); margin-bottom: 20px;"></i>
                        <h2 style="color: var(--text-dim);">Tidak ada hasil ditemukan di Netshort</h2>
                        <p style="color: var(--text-dim); margin-top: 10px;">Coba kata kunci lain atau kembali ke
                            beranda.</p>
                        <a href="/"
                            style="display: inline-block; margin-top: 20px; background: var(--primary); color: white; padding: 10px 25px; border-radius: 25px; text-decoration: none; font-weight: bold;">Ke
                            Beranda</a>
                    </div>
                    <% } %>
        </section>
    </main>

    <%- include('partials/footer') %>